<% layout('layout/boilerplate') %>

    <h1 class="text-center hausFont mt-3">Edit Comic</h1>
    <div class="row">

        <div class="col-md-6 offset-md-3">
            <!-- novalidate class='validated-form enctype="multipart/form-data"' -->
            <form action="/comics/<%=comic._id%>?_method=PUT" method="POST">
                <div class='mb-3'>
                    <label class="col-form-label hausFont" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="comic[title]" value="<%=comic.title%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class='mb-3'>
                    <label class="col-form-label hausFont" for="description">Description</label>
                    <input class="form-control" type="text" id="description" name="comic[description]"
                        value="<%=comic.description%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class='mb-3'>
                    <label class="col-form-label hausFont" for="path">Path</label>
                    <input class="form-control" type="text" id="path" name="comic[path]" value="<%=comic.path%>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                div class='mb-3'>
                <label class="col-form-label hausFont" for="filename">filename</label>
                <input class="form-control" type="text" id="filename" name="comic[filename]" value="<%=comic.filename%>"
                    required>
                <div class="valid-feedback">
                    Looks good!
                </div>
        </div>
        <div class="mt-3 mb-3">
            <!-- <div class="custom-file">
                        <input type="file" class="custom-file-input" id="customFile">
                        <label class="custom-file-label" for="customFile">Choose file</label>
                    </div> -->
            <label class="col-form-label hausFont" for="formFile">Replace Image</label>
            <div class='custom-file '>

                <input class="custom-file-input" type="file" id="formFile" name="image">
                <label for="formFile" class="col-form-label custom-file-label">Replace image:</label>

            </div>
        </div>
        <button class=' mt-5 btn btn-block btn-secondary'>Update Comic</button>
    </div>



    </form>


    </div>
    </div>