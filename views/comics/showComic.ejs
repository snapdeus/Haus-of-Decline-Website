<% layout('layout/boilerplate') %>
    <link rel="stylesheet" href="/stylesheets/showComic.css">
    <div class="container mt-3 mb-3">

        <div class="row">

            <div class="col-lg-10 mx-auto mt-auto ">


                <img loading="lazy" class="img-thumbnail specialBorder" src="/uploads/<%= comic.filename %>"
                    alt="<%= comic.description %>" title="<%= comic.title %>">

            </div>



        </div>



        <div class="row">
            <% if(currentUser) {%>
                <div class="col-md-3">
                    <div class="card-body">
                        <a class="card-link btn btn-info" href="/comics/<%= comic._id %>/edit">Edit</a>
                        <form class='d-inline' action="/comics/<%= comic._id %>?_method=DELETE" method='POST'>
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
        </div>

    </div>

    <div class="container">
        <div class="row ">
            <div class="col-12 text-center">
                <div id="arrow_2" class="arrow-wrapper text-center ">
                    <% if (prevComic[0]) {%>

                        <a style="text-decoration: none;" title="Previous" href="/comics/<%=prevComic[0]._id%>">
                            <div class="arrow arrow--left">
                                <span>Prev</span>
                            </div>
                        </a>
                        <% } %>
                            <div>
                                <h2 class="hausFont text-center mt-3 px-4 title">

                                    "<%= comic.title %>"
                                </h2>
                            </div>
                            <% if (nextComic[0]) {%>

                                <a style="text-decoration: none; color:white;" title="Next"
                                    href="/comics/<%=nextComic[0]._id%>">
                                    <div class="arrow arrow--right ">
                                        <span class="mr-1">Next</span>
                                    </div>
                                </a>
                                <% } %>
                </div>
            </div>
        </div>

        <div class="row align-items-center bottomSpacer">
            <div class="descripNoPad mx-auto">
                <button class="btn btn-dark">
                    <a style='color:white; text-decoration: underline;' class='link' href="/comics">Comics Index
                    </a>
                </button>
            </div>
        </div>

    </div>