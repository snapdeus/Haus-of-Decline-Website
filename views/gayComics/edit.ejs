<% layout('layout/boilerplate') %>

    <h1 class="text-center hausFont mt-3">Edit gayComic Form</h1>
    <div class="row">

        <div class="col-md-6 offset-md-3">
            <!-- enctype="multipart/form-data" -->
            <form action="/comics/gay/<%= page %>/<%=gayComic._id%>?_method=PUT" method="POST"
                enctype="multipart/form-data" novalidate class='validated-form'>
                <div class='mb-3'>
                    <label class="col-form-label hausFont" for="title">Title:</label>
                    <input class="form-control" type="text" id="title" name="gayComic[title]"
                        value="<%=gayComic.title%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class='mb-3'>
                    <label class="col-form-label hausFont" for="description">Description:</label>
                    <input class="form-control" type="text" id="description" name="gayComic[description]"
                        value="<%=gayComic.description%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class='mb-3'>
                    <label class="col-form-label hausFont" for="series">Series Number: (don't touch it)</label>
                    <input class="form-control" type="number" value="1" id="series" name="gayComic[series]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class='mb-3'>
                    <label class="col-form-label hausFont" for="ordinality">Comic Number:</label>
                    <input class="form-control" type="number" id="ordinality" name="gayComic[ordinality]"
                        value="<%=gayComic.ordinality%>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mt-3 mb-3">

                    <label class="col-form-label hausFont" for="formFile">Replace Image</label>
                    <div class='custom-file '>
                        <input class="custom-file-input" type="file" id="formFile" name="image">
                        <label for="formFile" class="col-form-label custom-file-label">Replace image:</label>
                    </div>
                </div>
                <button class=' mt-5 btn btn-block btn-secondary'>Edit gayComic</button>
        </div>



        </form>


    </div>