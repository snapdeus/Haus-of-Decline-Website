<% layout('layout/boilerplate') %>

    <h1 class="text-center hausFont mt-3">New togetherComic Form</h1>
    <div class="row">

        <div class="col-md-6 offset-md-3">
            <!-- enctype="multipart/form-data" -->
            <form action="/comics/together/1" method="POST" novalidate enctype="multipart/form-data"
                class='validated-form'>
                <div class='mb-3'>
                    <label class="col-form-label hausFont" for="title">Title:</label>
                    <input class="form-control" type="text" id="title" name="togetherComic[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class='mb-3'>
                    <label class="col-form-label hausFont" for="series">Series Number: (don't touch it)</label>
                    <input class="form-control" type="number" value="2" id="series" name="togetherComic[series]"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class='mb-3'>
                    <label class="col-form-label hausFont" for="ordinality">Comic Number:</label>
                    <input class="form-control" type="number" id="ordinality" name="togetherComic[ordinality]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mt-3 mb-3">
                    <label class="col-form-label hausFont" for="formFile">Choose Image</label>
                    <div class='custom-file '>
                        <input class="custom-file-input" type="file" id="formFile" name="image">
                        <label for="formFile" class="col-form-label custom-file-label">Choose image:</label>
                    </div>
                </div>
                <button class='mt-5 btn btn-block btn-secondary'>Add togetherComic</button>
        </div>



        </form>


    </div>