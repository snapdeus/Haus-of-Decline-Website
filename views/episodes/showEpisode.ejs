<% layout('layout/boilerplate') %>

    <div class="container mt-3">
        <div class="row">
            <div class="mx-auto mt-auto ">


                <img loading="lazy" style="max-width:350px" class="img-thumbnail specialBorder"
                    src="<%=episode.attributes.image_url%>" alt="<%= episode.attributes.title %>"
                    title="<%= episode.attributes.title %>">

            </div>

        </div>
        <div class="row">
            <h2 class="hausFont mx-auto mt-3 ">
                "<%= episode.attributes.title %>"

            </h2>
            <h3 class="hausFont mx-auto mt-3 ">
                <%= episode.attributes.formatted_published_at %>
            </h3>

            <p class="hausFont mx-auto mt-3 ">
                <%= episode.attributes.summary %>
            </p>

        </div>
        <div class="row">
            <%- episode.attributes.embed_html_dark %>
        </div>

    </div>